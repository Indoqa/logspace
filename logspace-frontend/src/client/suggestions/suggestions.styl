 @require '../app/variables'

.suggestions
  height 100%
  width 100%
  position relative
  overflow hidden

  .query
    width: 445px
    position: absolute
    input
      width 100%

  .result
    width: 280px
    top: 50px
    position absolute
    height s("calc(100% - 100px)")
    overflow-y auto
    overflow-x hidden

    a
      display block
      width 270px
      margin-bottom 20px
      height 80px
      .color
        float left
        width 7px
        height 80px
        box-shadow: 0 0 0 0 rgba(0, 0, 0, 0), 0 1px 3px 0 rgba(0, 0, 0, 0.14)
        background-color  #D3D3D3

      .inner
        float left
        font-size 1.4rem
        width $navigation-drawer-width - 40px
        overflow hidden
        height 70px
        padding 5px
        width 240px
        background-color $color6
        box-shadow: 0 0 0 0 rgba(0, 0, 0, 0), 0 1px 3px 0 rgba(0, 0, 0, 0.14);
        .properties
          text-overflow: ellipsis;
          width: 230px;
          white-space: nowrap;
          overflow: hidden;
          span
            font-size 1.1rem

    a:hover
      .inner
        background-color: $color9

  .facets
    width: 190px
    top: 50px
    left: 300px
    position: absolute
    height s("calc(100% - 100px)")
    overflow-y auto

  ul
    margin 0
    padding 0
    li
      list-style none
      margin-left 0
      a
        cursor pointer

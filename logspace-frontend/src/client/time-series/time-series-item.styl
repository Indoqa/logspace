@require '../app/variables'

.time-series-item
  height 80px
  margin-top 15px
  cursor pointer

  .color
    float left
    width 7px
    margin-left 10px;
    height 80px
    z-index 99999

  .inner
    float left
    font-size 1.4rem
    width $navigation-drawer-width - 40px
    overflow hidden
    height 70px
    padding 5px
    background-color $color5
    box-shadow: 0 0px 0px 0 rgba(0, 0, 0, 0.18), 0 3px 12px 0 rgba(0, 0, 0, 0.20);
    position relative

    .property
      font-size 1.1rem

    .axis
      position absolute
      right 2px
      top 2px
      color $color-primary

.time-series-item:hover .inner
  background-color: lighten($color5, 35%)

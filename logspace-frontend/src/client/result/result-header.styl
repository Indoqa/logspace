@require '../app/variables'

.chart-header
   background-color lighten($color-primary, 25%)
   text-align center
   height $header-height

   .chart-title
     padding-top 4px
     label
       color $color3
       font-family $font-title
       font-size 1.5rem
       line-height 2.9rem
     input
       font-size 1.5rem
       color #00
       width 300px

  .chart-options
    position absolute
    right 10px
    top 5px

@require '../app/variables'

.chart-header
   background-color $color1
   text-align center
   padding-right 100px
   height $header-height

   .chart-title
     padding-top 4px
     font-size 1.8rem
     text-transform uppercase

     label
       color $color-text-inverted
       font-family $font-title
       line-height 3.4rem

     input
       color $color-text
       width 300px

  .chart-options
    position absolute
    right 10px
    top 0px
    width 170px
    div 
      display inline-block
      height 10px
    .option
      width 30px
      height 30px
      margin-top 4px
      margin-right 5px
      display block
      cursor pointer
      float left
    
    .option.play 
      background url('../../../assets/img/icon-play.png')  
    
    .option.pause 
      background url('../../../assets/img/icon-pause.png')    
      
    .option.refresh 
      background url('../../../assets/img/icon-sync.png')     
    
    .option.progress 
      background url('../../../assets/img/icon-auto.png')       
      span
        font-size 10px
        display block
        margin-top 4px
        color white
        
    select
      float left  
      width 80px
      margin-top 10px
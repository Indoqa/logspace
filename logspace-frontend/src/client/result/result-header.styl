@require '../app/variables'

.chart-header
   background-color $color1
   text-align center
   padding-right 100px
   height $header-height

   .chart-title
     padding-top 4px
     font-size 1.8rem
     text-transform uppercase

     label
       color $color-text-inverted
       font-family $font-title
       line-height 3.4rem

     input
       color $color-text
       width 300px

  .chart-options
    position absolute
    right 10px
    top 5px

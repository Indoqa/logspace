@require '../../../app/components/variables'

.resultChart
  padding-top 25px
  padding-bottom 15px
  background-color $color3
  height 100%

  .loading
    display none
    position absolute
    top 0x
    left 0px
    width 100%
    height 100%
    background #FFFFFFC8
    z-index 1000000

    span
      display block
      position relative
      width 200px
      left 50%
      top 50%
      margin-left -100px
      margin-top -100px
      color $color-text-inverted
      font-size 3em

  .loading.active
    display block

  .message
    padding 10px
    text-align center
    color $color6
    font-size 3rem

    font-family $font-main
    text-transform uppercase
    position absolute
    top 50%
    left 50%
    width 600px
    margin-top -50px
    margin-left -350px

    .status
      line-height 1.5

    small
      display inline-block
      margin-top 15px
      font-size 2rem
      text-transform none
      line-height 1.4

/*-- Chart --*/
.c3 svg
  font-family $font
  font-size 1rem

.c3 path, path.domain .c3 line
  fill none
  stroke $color5
  stroke-width 1px

.c3 line
  stroke-width 1px

.c3 text
  -webkit-user-select none
  -moz-user-select none
  user-select none

.c3-legend-item-tile, .c3-xgrid-focus, .c3-ygrid, .c3-event-rect, .c3-bars path
  shape-rendering crispEdges

.c3-chart-arc path
  stroke #fff

.c3-chart-arc text
  fill #fff
  font-size 1.2rem

/*-- Axis --*/
/*-- Grid --*/
.c3-grid line
  stroke $color-secondary

.c3-grid text
  fill red

.c3-xgrid, .c3-ygrid
  stroke-dasharray 3 3

/*-- Text on Chart --*/
.c3-text.c3-empty
  fill red
  font-size 2em

/*-- Line --*/
.c3-line
  stroke-width 1px

/*-- Point --*/
.c3-circle._expanded_
  stroke-width 1px
  stroke white

.c3-selected-circle
  fill red
  stroke-width 2px

/*-- Bar --*/
.c3-bar
  stroke-width 0

.c3-bar._expanded_
  fill-opacity 0.75

/*-- Focus --*/
.c3-target.c3-focused
  opacity 1

.c3-target.c3-focused path.c3-line, .c3-target.c3-focused path.c3-step
  stroke-width 2px

.c3-target.c3-defocused
  opacity 0.3 !important

/*-- Region --*/
.c3-region
  fill steelblue
  fill-opacity 0.1

/*-- Brush --*/
.c3-brush .extent
  fill-opacity 0.1

/*-- Select - Drag --*/
/*-- Legend --*/
.c3-legend-item
  font-size 12px

.c3-legend-item-hidden
  opacity 0.15

.c3-legend-background
  opacity 0.75
  fill white
  stroke lightgray
  stroke-width 1

/*-- Title --*/
.c3-title
  font 14px sans-serif

/*-- Tooltip --*/
.c3-tooltip-container
  z-index 10

.c3-tooltip
  border-collapse collapse
  border-spacing 0
  background-color #fff
  empty-cells show
  -webkit-box-shadow 7px 7px 12px -9px #777777
  -moz-box-shadow 7px 7px 12px -9px #777777
  box-shadow 7px 7px 12px -9px #777777
  opacity 0.9

.c3-tooltip tr
  border 1px solid #CCC

.c3-tooltip th
  background-color $color-primary
  font-size 1.4rem
  font-weight 400
  padding 2px 5px
  text-align left
  color $color5

.c3-tooltip td
  font-size 13px
  padding 3px 6px
  background-color #fff
  border-left 1px dotted #999

.c3-tooltip td > span
  display inline-block
  width 10px
  height 10px
  margin-right 6px

.c3-tooltip td.value
  text-align right

/*-- Area --*/
.c3-area
  stroke-width 0
  opacity 0.2

/*-- Arc --*/
.c3-chart-arcs-title
  dominant-baseline middle
  font-size 1.3em

.c3-chart-arcs .c3-chart-arcs-background
  fill #e0e0e0
  stroke none

.c3-chart-arcs .c3-chart-arcs-gauge-unit
  fill #000
  font-size 16px

.c3-chart-arcs .c3-chart-arcs-gauge-max
  fill #777

.c3-chart-arcs .c3-chart-arcs-gauge-min
  fill #777

.c3-chart-arc .c3-gauge-value
  fill #000

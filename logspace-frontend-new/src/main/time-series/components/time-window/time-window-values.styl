@require '../app/variables'

.time-window-values
  color $color-text-inverted
  padding 5px 5px 5px 22px
  cursor pointer
  position relative  
  height 21px
  .small
    font-size 0.7em
  .gap
    position absolute 
    right 6px
    top 5px 
    background $color3
    color $color-primary
    padding 0px 4px
    font-size 0.8em
    border-radius 2px
    white-space nowrap
    overflow hidden
    text-overflow ellipsis;
    max-width 40px
    
